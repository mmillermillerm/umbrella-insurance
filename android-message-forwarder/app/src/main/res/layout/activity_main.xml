<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:paddingBottom=".6dp"
   android:paddingLeft=".6dp"
   android:paddingRight=".6dp"
   android:paddingTop=".6dp"
   tools:context="com.umbrella.insurance.androidMessageForwarder.MainActivity">

   <TextView
       android:id="@+id/title"
       android:layout_centerHorizontal="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="20dp"
       android:layout_marginBottom="20dp"
       android:text="Android Message Forwarder"
       android:textColor="#2196F3"
       android:textSize="20dp" />


   <EditText
       android:id="@+id/phoneNumber"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/title"
       android:layout_centerHorizontal="true"
       android:layout_marginStart="20dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="20dp"
       android:layout_marginBottom="20dp"
       android:hint="Enter Phone Number"
       android:inputType="phone"
       android:text=""
       android:textAlignment="center"
       android:textColorHint="@color/abc_primary_text_material_dark"
       android:textSize="20dp" />

   <EditText
       android:id="@+id/message"
       android:layout_centerHorizontal="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="20dp"
       android:layout_marginBottom="20dp"
       android:layout_below="@+id/phoneNumber"
       android:hint="Enter SMS"
       android:text=""
       android:textSize="20dp"
       android:textColorHint="@color/abc_primary_text_material_dark" />

   <Button
       android:layout_centerHorizontal="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="20dp" 
       android:layout_marginBottom="20dp"
       android:layout_below="@+id/message"
       android:text="Send Sms"

       android:id="@+id/btnSendSMS" />

   <EditText
       android:id="@+id/domain"
       android:layout_centerHorizontal="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="20dp"
       android:layout_marginBottom="20dp"
       android:layout_below="@+id/btnSendSMS"
       android:hint="url"
       android:text="backend-app.umbrella-insurance.dev"
       android:textSize="20dp"
       android:textColorHint="@color/abc_primary_text_material_dark" />

   <EditText
       android:id="@+id/port"
       android:layout_centerHorizontal="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="20dp"
       android:layout_marginBottom="20dp"
       android:layout_below="@+id/domain"
       android:hint="port"
       android:text=""
       android:textSize="20dp"
       android:textColorHint="@color/abc_primary_text_material_dark" />

   <Button
       android:id="@+id/btnReconnectWS"
       android:layout_below="@id/port"
       android:layout_centerHorizontal="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="20dp"
       android:padding=".6dp"
       android:paddingStart=".6dp"
       android:paddingLeft=".6dp"
       android:paddingTop=".6dp"
       android:paddingEnd=".6dp"
       android:paddingRight=".6dp"
       android:text="Reconnect WS"
       android:textSize="20dp" />

   <Button
       android:id="@+id/btnDisconnectWS"
       android:layout_below="@id/btnReconnectWS"
       android:layout_centerHorizontal="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="20dp"
       android:padding=".6dp"
       android:paddingStart=".6dp"
       android:paddingLeft=".6dp"
       android:paddingTop=".6dp"
       android:paddingEnd=".6dp"
       android:paddingRight=".6dp"
       android:text="Disconnect WS"
       android:textSize="20dp" />

</RelativeLayout>